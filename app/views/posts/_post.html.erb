
<h2><%= post.title %></h2>
<hr>
<p><%= post.body %></p>
<hr>
<div class="options">
    <%= link_to "Like", root_path%>
    <%= link_to "Comment", root_path%>
    <% if current_user.id == post.user.id %>
        <%= link_to "Edit", edit_post_path(post)%>
        <%= link_to "Delete", post_path(post), data: {turbo_method: :delete} %>
    <% end %>
</div>