<turbo-frame id="modal" class="modal">
    <div class="form">
        <h1> Create new post </h1>
        <%= form_with(model: @post, local: true) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.label :body %>
            <%= f.text_area :body %>
            <%= f.submit "Post"%>
        <% end %>
    </div>
</turbo-frame>